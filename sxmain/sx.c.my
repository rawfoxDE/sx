	strcpy(stg->reserve,charbuf);
	if(stg->reserve[0]!='\0')
		mysprintf(buf, "›m\r\n\r\nNow reserved for ›36m%s›m.\r\n", stg->reserve);
	else
		strcpy(buf, "›m\r\n\r\nThis node is now ›36mnot ›mreserved.\r\n");
	Local(buf);
	var.LOCAL=FALSE;
	var.CALLER=FALSE;
}

